<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ep_bg">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tocTopAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ep_primary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Emergency Procedures"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        android:background="@color/ep_bg">

        <TextView
            android:id="@+id/tocHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Access"
            android:textStyle="bold"
            android:textSize="24sp"
            android:padding="8dp"
            android:textColor="@color/ep_text_secondary" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ep_divider" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tocRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false" />

    <TextView
        android:id="@+id/tocFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:text="Tap a section to jump straight to its page. Swipe left or right to move between pages."
        android:textSize="12sp"
        android:textColor="@color/ep_text_secondary" />

</LinearLayout>
